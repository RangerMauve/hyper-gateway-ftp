{
  "name": "hyper-gateway-ftp",
  "version": "1.0.0",
  "description": "Hypercore Protocol exposed as an FTP server which can be mounted as a network drive.",
  "main": "src/index.js",
  "bin": "src/bin.js",
  "scripts": {
    "test": "node test",
    "build": "pkg ./ --compress Brotli"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RangerMauve/hyper-gateway-ftp.git"
  },
  "pkg": {
    "targets": [
      "node14-linux-x64",
      "node14-macos-x64",
      "node14-win-x64"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "hypercore",
    "hyper",
    "gateway",
    "ftp",
    "drive",
    "mount"
  ],
  "author": "rangermauve <ranger@mauve.moe> (https://mauve.moe/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RangerMauve/hyper-gateway-ftp/issues"
  },
  "homepage": "https://github.com/RangerMauve/hyper-gateway-ftp#readme",
  "dependencies": {
    "ftpd": "^0.2.16",
    "node-fetch": "^2.6.1",
    "stat-mode": "^0.2.2",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "basic-ftp": "^4.6.6",
    "delay": "^5.0.0",
    "get-port": "^5.1.1",
    "pkg": "^5.3.0",
    "tape": "^5.2.2"
  }
}
